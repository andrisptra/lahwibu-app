<resources>
    <!-- Base application theme. -->
    <style name="Theme.LahWibu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!--      Accent brand color  -->
        <item name="colorAccent">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.BottomNavigationStyle" parent="Theme.LahWibu">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="color">@color/white</item>
        <item name="itemTextColor">?attr/colorAccent</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_color</item>

    </style>
</resources>